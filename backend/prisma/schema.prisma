// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  arquivos  ArquivoAudio[]

  @@map("usuarios")
}

model ArquivoAudio {
  id                   String   @id @default(uuid())
  nomeOriginal         String
  nomeArmazenado       String
  caminhoArquivo       String
  tamanhoBytes         Int
  formato              String
  statusProcessamento  String   @default("PENDENTE") // PENDENTE | PROCESSANDO | CONCLUIDO | ERRO
  idReuniaoOuTeste     String?  // ID vinculado à reunião ou teste
  
  // Relação com usuário
  usuarioId            String
  usuario              Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  
  // Dados da transcrição (quando processado)
  transcricao          String?
  processadoEm         DateTime?
  erroProcessamento    String?

  // Dados da ata gerada
  ataGerada            Boolean   @default(false)
  textoAta             String?
  statusAta            String?   // GERANDO | CONCLUIDA | ERRO
  ataGeradaEm          DateTime?
  erroAta              String?

  // Relacionamento com assinaturas
  assinaturas          Assinatura[]

  @@map("arquivos_audio")
}

model Assinatura {
  id                   String   @id @default(uuid())
  
  // Relacionamento com arquivo/ata
  arquivoAudioId       String
  arquivoAudio         ArquivoAudio @relation(fields: [arquivoAudioId], references: [id], onDelete: Cascade)
  
  // Dados do assinante
  nomeAssinante        String
  cpfAssinante         String?
  emailAssinante       String?
  cargoAssinante       String?  // Ex: Síndico, Subsíndico, Conselheiro
  
  // Dados da assinatura
  tipoAssinatura       String   @default("SIMPLES") // SIMPLES | GOVBR | CERTIFICADO_DIGITAL
  hashDocumento        String?  // Hash do documento no momento da assinatura
  ipAssinante          String?
  userAgentAssinante   String?
  
  // Integração gov.br (para futuro)
  govbrCpf             String?
  govbrNivelConta      String?  // bronze, prata, ouro
  govbrCertificadoId   String?
  
  // Timestamps
  assinadoEm           DateTime @default(now())
  
  @@map("assinaturas")
}
